<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fi.helsinki.mobiilishakki.MobiiliShakki">

    <Button
        android:id="@+id/btn_startAsWhite"
        android:layout_width="230dp"
        android:layout_height="97dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_textview"
        android:text="Start as White" />

    <Button
        android:id="@+id/btn_startAsBlack"
        android:layout_width="230dp"
        android:layout_height="97dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_textview"
        android:text="Start as Black" />

    <TextView
        android:id="@+id/img_result"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="449dp"
        android:background="@drawable/custom_textview"
        android:backgroundTint="@color/colorPrimary"
        android:padding="5dp"
        android:text="@string/img_result"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/board_coord"
        android:layout_width="360dp"
        android:layout_height="360dp"

        android:layout_marginStart="27dp"
        android:layout_marginTop="132dp"
        app:srcCompat="@drawable/custom_textview" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextureView
            android:id="@+id/texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fi.helsinki.mobiilishakki.DrawView
            android:id="@+id/drawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />


    </FrameLayout>
</RelativeLayout>